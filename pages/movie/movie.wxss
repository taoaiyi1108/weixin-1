/* pages/movie/movie.wxss */
/*搜索框  */
.searchBox {
  height: 80rpx;
  padding: 10rpx 0;
  margin-top: 10rpx;
  background: #fff;
  position: relative;
}
.search {
  height: 100%;
  color: #555;
  font-size:32rpx;
  padding-left:20px;
  width:90%;
  margin:0 auto;
  border: 1px solid #ccc;
  border-radius: 40rpx;
  box-sizing: border-box;
}
.searchBox .serachImg {
  position: absolute;
  right: 70rpx;
  top: 50%;
  transform: translateY(-50%);
  width: 55rpx;
  height: 55rpx;
  z-index: 999;
}
/*banner  */
.banner {
  position: relative;
  height: 130rpx;
  text-align: center;
  background: #F6FAF9;
}
.banner .bannerImg {
  position: absolute;
  top: 45%;
  right: 10%;
  width:40%;
  height: 45%;
}
.bannerText {
  position: absolute;
  font-size: 30rpx;
  top: 5%;
  left: 2%;
  color: #339966;
}
/*content  */
.contentBox {
  margin:  10rpx 10rpx 0 10rpx;
  border-radius: 10rpx;
  background: #fff;
  padding: 5rpx 20rpx 0rpx;
}
.contentTitle {
  position: relative;  
  line-height:100rpx;
  padding-left:60rpx;
  border-bottom:1px solid #ccc;
  margin:0 auto;
  box-sizing:border-box;
  font-weight:900;
  color: #333;
  font-size:48rpx; 
}
.conIcon {
  position: absolute;
  width: 35rpx;
  height: 35rpx;
  left: 0;
  top: 50%;
  transform: translateY(-50%);
}
/*列表  */
.list {
  height: 220rpx;
  padding: 20rpx 10rpx 0rpx;
}
.listImg {
  height: 100%;
  width: 25%;
}
.listInfo {
  float: right;
  width: 60%;
  height: 95%;
  font-size:28rpx;
  line-height:55rpx;
  padding: 5rpx 15rpx;
}
/*热映  */
.reying {
  height: 250rpx;
  overflow: hidden;
}